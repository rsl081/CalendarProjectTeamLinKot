<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".view.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainttoolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/green_cyan"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<!--        //nneed ko ng include dito-->
        <TextView
            android:id="@+id/tvyearAndMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:text="January 2021"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/sunset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
            app:layout_constraintStart_toEndOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/circular_shape"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/tvyearAndMonth"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/tvyearAndMonth"
            app:layout_constraintTop_toTopOf="@+id/tvyearAndMonth">

            <ImageView
                android:id="@+id/rightarrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="arrow"
                android:src="@drawable/right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/circular_shape"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/tvyearAndMonth"
            app:layout_constraintEnd_toStartOf="@+id/tvyearAndMonth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvyearAndMonth">

            <ImageView
                android:id="@+id/leftarrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="arrow"
                android:src="@drawable/left_arrow" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Task"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/sunset"
            app:layout_constraintBottom_toBottomOf="@+id/tvview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvview"
            app:layout_constraintTop_toTopOf="@+id/tvview" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Today"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/sunset"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            app:layout_constraintEnd_toStartOf="@+id/tvview"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" />
        <TextView
            android:id="@+id/tvview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="View"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/sunset"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutWeek"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/green_cyan"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrainttoolbar">

        <TextView
            android:id="@+id/tvsun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="SUN"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/sunset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvmon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvmon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="MON"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/sunset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvtue"
            app:layout_constraintStart_toEndOf="@+id/tvsun"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvtue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="TUE"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/sunset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvwed"
            app:layout_constraintStart_toEndOf="@+id/tvmon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvwed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="WED"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/sunset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvthu"
            app:layout_constraintStart_toEndOf="@+id/tvtue"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvthu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="THU"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/sunset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvfri"
            app:layout_constraintStart_toEndOf="@+id/tvwed"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvfri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="FRI"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/sunset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvsat"
            app:layout_constraintStart_toEndOf="@+id/tvthu"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvsat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="SAT"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/sunset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvfri"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_rycler"
        android:layout_width="match_parent"
        android:layout_height="616dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutWeek">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvItemsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cns_yearview"
        android:layout_width="match_parent"
        android:layout_height="616dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/constrainttoolbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvYearList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="540dp"
        android:text="Hello!!!!!!!!!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>